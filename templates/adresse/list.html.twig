{% extends "base.html.twig" %}

{% block body %}
    <a href="/adresse/add"><i class="fas fa-plus"></i></a>
 
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Adresse 1</td>
                <td>Adresse 2</td>
                <td>Code postal</td>
                <td>Ville</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>

    {% for adresse in adresses %}
        <tr>
            <td>{{ adresse.id }}</td>
            <td>{{ adresse.adresse1 }}</td>
            <td>{{ adresse.adresse2 }}</td>
            <td>{{ adresse.codepostal }}</td>
            <td>{{ adresse.ville }}</td>
            <td><a href="/adresse/update/{{ adresse.id }}"><i class="fas fa-pencil-alt"></i></a>
                <a href="/adresse/delete/{{ adresse.id }}"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
    {% endfor %}
        </tbody>

    </table>

{% endblock %}